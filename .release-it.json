{
	"git": {
		"commitMessage": "chore(release): v${version}",
		"tagName": "v${version}",
		"addUntrackedFiles": true
	},
	"hooks": {
		"before:init": [],
		"after:bump": ["pnpm run git-info"],
		"after:@release-it/conventional-changelog:bump": "pnpm run create-mdx-changelog \"${changelog}\"",
		"after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"infile": "CHANGELOG.md",
			"preset": {
				"name": "conventionalcommits",
				"header": "# Changelog",
				"commitUrlFormat": "https://github.com/{{owner}}/{{repository}}/commit/{{hash}}",
				"tagPrefix": "v",
				"types": [
					{ "type": "feat", "section": "ğŸš€ New Feature" },
					{ "type": "fix", "section": "ğŸ› Bug Fix" },
					{ "type": "style", "section": "ğŸ’… Polish" },
					{ "type": "chore", "section": "ğŸ“¦ Chores" },
					{ "type": "perf", "section": "âš¡ Performance Improvements" },
					{ "type": "revert", "section": "âª Reverts" },
					{ "type": "docs", "section": "ğŸ“ Documentation" },
					{ "type": "refactor", "section": "â™» Code Refactoring" },
					{ "type": "test", "section": "âœ… Tests" },
					{ "type": "build", "section": "ğŸ‘·â€ Build System" },
					{ "type": "ci", "section": "ğŸ”§ Continuous Integration | CI" }
				]
			}
		}
	}
}
